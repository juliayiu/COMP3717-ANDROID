<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NewButton"
        android:id="@+id/button"
        android:onClick="bottomPressed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/def"
        android:id="@+id/blankAlbum"
        android:onClick="albumPressed"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/def"
        android:id="@+id/imageButton"
        android:onClick="albumPressed"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/blankAlbum"
        android:layout_toEndOf="@+id/blankAlbum" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/def"
        android:id="@+id/imageButton2"
        android:onClick="albumPressed"
        android:scaleType="centerCrop"
        android:layout_below="@+id/blankAlbum"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/def"
        android:id="@+id/imageButton3"
        android:onClick="albumPressed"
        android:scaleType="centerCrop"
        android:layout_below="@+id/blankAlbum"
        android:layout_toEndOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/def"
        android:id="@+id/imageButton4"
        android:onClick="albumPressed"
        android:scaleType="centerCrop"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
