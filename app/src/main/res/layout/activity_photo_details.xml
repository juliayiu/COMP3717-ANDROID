<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.julia.android3.PhotoDetails">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photoDetail"
        android:src="@drawable/groot"
        android:layout_alignParentTop="true"
        android:focusableInTouchMode="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description: "
        android:textSize="25dp"
        android:id="@+id/descLabel"
        android:layout_below="@+id/photoDetail"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo&apos;s description will go here and can span multiple lines and can be edited."
        android:id="@+id/photoDesc"
        android:layout_below="@+id/descLabel"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
