<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.julia.android3.AlbumDetails"
    android:background="#ffffff">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="105dp"
        android:src="@drawable/groot"
        android:id="@+id/placeholderPhoto1"
        android:onClick="photoDetail"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/groot"
        android:id="@+id/placeholderPhoto2"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:layout_alignTop="@+id/placeholderPhoto1"
        android:layout_centerHorizontal="true"
        android:onClick="photoDetail"/>

    <ImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/groot"
        android:id="@+id/placeholderPhoto3"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="photoDetail" />

    <ImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/groot"
        android:id="@+id/placeholderPhoto4"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:layout_below="@+id/placeholderPhoto1"
        android:layout_alignParentStart="true"
        android:onClick="photoDetail" />

</RelativeLayout>
